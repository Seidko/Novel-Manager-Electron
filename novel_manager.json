                            }
                        }
                    }
                }
            }
        },
        "bookshuku": {
            "name": "TXT图书下载网",
            "description": "",
            "type": "common",
            "enable": false,
            "url": "https://www.bookshuku.com",
            "priorities": 2,
            "match_rule": {
                "book_description": {
                    "url": "http://www.bookshuku.com/bookinfo/{book_id}.html",
                    "method": "GET",
                    "content": "text/html",
                    "encoding": "UTF-8",
                    "match_method": "regexp",
                    "rule": {
                        "name": "//*[@id=\"downInfoArea\"]/dd[1]/img//@alt",
                        "author": "//*[@id=\"downInfoArea\"]/dd[2]/a[1]",
                        "cover": "//*[@id=\"downInfoArea\"]/dd[1]/img//@src",
                        "description": "//*[@id=\"mainSoftIntro\"]/p",
                        "category": "//*[@id=\"downInfoArea\"]/dd[2]/a[2]",
                        "status": null,
                        "words_count": "//*[@id=\"downInfoArea\"]/dd[2]/text()[4]"
                    }
                }
            }
        },
        "vipkanshu": {
            "name": "笔趣阁vipkanshu",
            "description": "",
            "type": "common",
            "enable": true,
            "url": "https://www.vipkanshu.com",
            "priorities": 2,
            "match_rule": {
                "book_description": {
                    "url": "https://www.vipkanshu.com/shu/{book_id}",
                    "method": "GET",
                    "content": "text/html",
                    "encoding": "UTF-8",
                    "match_method": "xpath",
                    "rule": {
                        "author": "/html/head/meta[@property='og:novel:author']/@content",
                        "cover": "/html/head/meta[@property='og:image']/@content",
                        "description": "/html/head/meta[@property='og:description']/@content",
                        "category": "/html/head/meta[@property='og:novel:category']/@content",
                        "status": null,
                        "words_count": null
                    }
                }
            }
        }
    }
}